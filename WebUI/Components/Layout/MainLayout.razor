@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row d-flex justify-content-between align-items-center px-4 py-2 bg-light shadow-sm">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank" class="text-decoration-none fw-bold text-primary">
                About
            </a>

            <button class="btn btn-outline-danger btn-sm d-flex align-items-center">
                <i class="bi bi-box-arrow-right me-1"></i> Logout
            </button>
        </div>


        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
